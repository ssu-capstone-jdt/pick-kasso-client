{
  "manifest_version": 3,
  "name": "3 Minute Timer",
  "version": "1.0",
  "description": "A Chrome extension to set a 3-minute countdown timer.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
